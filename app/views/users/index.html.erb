<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
	<th>Type</th>
    <th>Device</th>
    <th>Workspace</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
	<td><%= user.type %></td>
    <td><a href="/mydevices/<%= user._id%>">显示设备</a>  <a href="/mydevices/<%= user._id%>/edit">更改设备</a></td>
    <td><%= user.workspace %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

